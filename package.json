{
    "name": "agent-bedrock",
    "version": "0.1.0",
    "description": "A JavaScript library for building conversational AI agents with AWS Bedrock",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsc",
        "test": "vitest --run",
        "test:watch": "vitest",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
        "typecheck": "tsc --noEmit",
        "example:aws-docs-mcp": "node dist/examples/aws-docs-mcp-nova.js",
        "test:mcp-connection": "node dist/examples/test-mcp-connection.js"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/pierrehanne/agent-bedrock"
    },
    "bugs": {
        "url": "https://github.com/pierrehanne/agent-bedrock/issues"
    },
    "homepage": "https://github.com/pierrehanne/agent-bedrock#readme",
    "dependencies": {
        "@aws-lambda-powertools/logger": "^2.28.1",
        "@aws-lambda-powertools/metrics": "^2.28.1",
        "@aws-lambda-powertools/tracer": "^2.28.1",
        "@aws-sdk/client-bedrock-runtime": "^3.700.0",
        "@modelcontextprotocol/sdk": "^1.20.2"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.157",
        "@types/node": "^24.9.2",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "eslint": "^8.57.1",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.5"
    },
    "engines": {
        "node": ">=22.0.0"
    }
}